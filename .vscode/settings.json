{
    "files.exclude": {
        ".git": true,

        // configs
        ".vscode": true,
        ".prettierrc": true,
        ".prettierignore": true,
        ".gitignore": true,
        "eslint.config.*": true,
        "tsconfig.json": true,
        "*.code-workspace": true,
        // "vitest.config.ts": true,

        // package manager artifacts
        "node_modules": true,
        "bun.lock": true,

        // hooks
        ".husky": true,

        // build outputs
        "dist": true,

        // ci/cd
        ".github": true,
        "Taskfile": true
    },
    "editor.formatOnSave": true,
    "editor.rulers": [100],
    "[markdown]": {
        "editor.rulers": [120]
    },
    "[instructions]": {
        "editor.rulers": [120]
    }
}
