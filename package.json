{
    "name": "@lucode/ploy",
    "version": "0.0.4",
    "type": "module",
    "description": "Gitea action with helpers to deploy apps",
    "scripts": {
        "fmt": "prettier --check .",
        "fmt:fix": "prettier --write .",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "check": "bun run fmt && bun run lint",
        "build": "ncc build --source-map src/index.ts",
        "test": "vitest run",
        "prepare": "husky",
        "release": "bun run scripts/release.ts"
    },
    "dependencies": {
        "@actions/core": "1.11.1",
        "@actions/github": "^6.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.0",
        "@inquirer/prompts": "^7.9.0",
        "@types/node": "20.19.23",
        "@types/semver": "^7.7.1",
        "@vercel/ncc": "0.38.4",
        "@vitest/coverage-v8": "^4.0.7",
        "eslint": "^9.39.0",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jiti": "^2.6.1",
        "prettier": "^3.6.2",
        "semver": "^7.7.3",
        "typescript": "5.9.3",
        "typescript-eslint": "^8.46.3",
        "vitest": "4.0.3"
    }
}
