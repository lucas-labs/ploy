{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "es2022",
        "moduleDetection": "force",
        "allowJs": true,
        "strict": true,

        // Bundler mode
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "@/*": ["src/*"]
        }
    }
}
